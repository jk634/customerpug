doctype html
html
  head
    title Add customer
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    div.container
      h1.text-warning New customer
      form(action='/addcustomer', method='POST')
        div.mt-1
        input(type="text", name="firstname", placeholder="Firstname").form-control
        div.mt-1
        input(type="text", name="lastname", placeholder="Lastname").form-control
        div.mt-1
        input(type="text", name="email", placeholder="Email").form-control
        div.mt-1
        input(type="number", name="phone", placeholder="Phone").form-control
        div.mt-1
        input(type="submit", value="Add").btn.btn-primary